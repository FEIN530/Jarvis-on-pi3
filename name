[Unit]
Description=Jarvis Voice Assistant
After=network.target sound.target

[Service]
ExecStart=/usr/bin/python3 /home/pi/jarvis/jarvis_local_music.py
WorkingDirectory=/home/pi/jarvis
StandardOutput=append:/var/log/jarvis.log
StandardError=append:/var/log/jarvis.log
Restart=always
RestartSec=5
User=pi
Environment=PYTHONUNBUFFERED=1
# Wait for sound devices to initialize
ExecStartPre=/bin/sleep 10

[Install]
WantedBy=multi-user.target
